<Page x:Class="HN.Bangumi.Uwp.Views.SubjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:HN.Bangumi.Uwp.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="using:HN.Bangumi.Models"
      xmlns:chart="using:Telerik.UI.Xaml.Controls.Chart"
      DataContext="{Binding Source={StaticResource Locator}, Path=Subject}"
      mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Image Height="300"
                           Source="{Binding Path=Subject.Images.Large}"
                           Stretch="UniformToFill" />
                    <TextBlock VerticalAlignment="Bottom"
                               Foreground="White"
                               Text="{Binding Path=Subject.ChineseName}"
                               TextWrapping="Wrap" />
                </Grid>
                <Pivot>
                    <PivotItem Header="作品信息">
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Subject.Summary}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </PivotItem>
                    <PivotItem Header="章节">
                        <GridView ItemsSource="{Binding Path=Subject.Eps}"
                                  SelectionMode="None">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:Ep">
                                    <Button Content="{Binding Path=Sort}"
                                            Style="{StaticResource EpButtonStyle}">
                                        <Button.Flyout>
                                            <Flyout>
                                                <Flyout.FlyoutPresenterStyle>
                                                    <Style TargetType="FlyoutPresenter">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <AcrylicBrush TintColor="White" TintOpacity="0.7" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Flyout.FlyoutPresenterStyle>
                                                <Flyout.Content>
                                                    <Grid>
                                                        <TextBlock Text="{Binding Path=ChineseName}" />
                                                    </Grid>
                                                </Flyout.Content>
                                            </Flyout>
                                        </Button.Flyout>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </GridView>
                    </PivotItem>
                    <PivotItem Header="角色">
                        <GridView ItemsSource="{Binding Path=Subject.Characters}"
                                  SelectionMode="None">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:Character">
                                    <controls:CharacterControl />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </GridView>
                    </PivotItem>
                    <PivotItem Header="评分">
                        <Grid>     <TextBlock Text="{Binding Path=Subject.Rating.Score}"></TextBlock>
                            <chart:RadCartesianChart></chart:RadCartesianChart>
                            </Grid>
                   

                    </PivotItem>
                    <PivotItem Header="讨论"></PivotItem>
                </Pivot>
                <TextBlock x:Name="ForTest"
                           TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
        <Button HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="ButtonBase_OnClick" />
    </Grid>
</Page>